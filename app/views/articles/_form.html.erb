<%= form_for @article  do |f| %>
	<% if @article.errors.any? %>
		<div id="error_explnation">
		
		<!-- add color to css -->
			<h2 color="red">
				<%= pluralize(@article.errors.count, "error") %> pervented save. 
			</h2>
			<ul>
				<% @article.errors.full_messages.each do |msg| %>
					<li color="red"><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>


	<p> 
	  <%= f.label :title %><br>
	  <%= f.text_field :title%>
	</p>

	<p>
	  <%= f.label :text %><br>
	  <%= f.text_area :text %>
	</p>

	<p>
	  <%= f.submit %>
	</p>

<% end %>
